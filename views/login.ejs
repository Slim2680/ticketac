<!DOCTYPE html>
<html>
  <head>
    <title>Ticketac</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    
  </head>
  <body>
    <div class="container-fluid p-0">
        <%- include('../public/partials/navbar'); %>

        <div class="row-fluid d-flex col-4 offset-4 mt-5">
            <div class="col-12 col-sm-6 text-center">
                <div class="formArea">
                    <h4 class="titleForm text-white">Sign-in :</h4>

                    <form action="/sign-in" method="POST">
                        <div class="form-group m-3">
                            <input name="SIemail" type="email" class="form-control p-2" aria-describedby="emailHelp" placeholder="Email">
                        </div>
                        <div class="form-group m-3">
                            <input name="SIpassword" type="password" class="form-control p-2" placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-danger">Confirm</button>
                    </form>
                </div>
            </div>
            
            <div class="col-12 col-sm-6 text-center">
                <div class="formArea">
                    <h4 class="titleForm text-white">Sign-up :</h4>

                    <form action="/sign-up" method="POST">
                        <div class="form-group m-3">
                            <input name="SUname" type="text" class="form-control p-2" placeholder="Name">
                        </div>
                        <div class="form-group m-3">
                            <input name="SUfirstname" type="text" class="form-control p-2" placeholder="FirstName">
                        </div>
                        <div class="form-group m-3">
                            <input name="SUemail" type="email" class="form-control p-2" aria-describedby="emailHelp" placeholder="Email">
                        </div>
                        <div class="form-group m-3">
                            <input name="SUpassword" type="password" class="form-control p-2"  placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-danger">Confirm</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
  </body>
</html>
